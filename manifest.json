{
  "manifest_version": 3,
  "name": "BrowserTabHibernator",
  "version": "1.0",
  "description": "Auto-discard inactive tabs. Includes UI toggle, dynamic whitelist, import/export.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/BrowserTabHibernator.png"
    }
  },
  "icons": {
    "128": "icons/BrowserTabHibernator.png"
  }
}